<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aayat.bankingsystem">

    <application
        android:allowBackup="true"
        android:icon="@drawable/bank_image"
        android:label="Banking System"
        android:roundIcon="@drawable/bank_image"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_white">
        <activity
            android:name="com.aayat.bankingsystem.splash_screenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aayat.bankingsystem.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aayat.bankingsystem.user_listActivity"
            android:label="Banking System"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.aayat.bankingsystem.user_dataActivity"
            android:label="User Details"
            android:parentActivityName="com.aayat.bankingsystem.user_listActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.aayat.bankingsystem.sendtouserActivity"
            android:label="Transfer Money"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.aayat.bankingsystem.history_list"
            android:label="Transactions"
            android:parentActivityName="com.aayat.bankingsystem.user_listActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
    </application>

</manifest>